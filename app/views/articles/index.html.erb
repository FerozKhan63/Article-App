<p id="notice"><%= notice %></p>

  <h1>Articles</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="arttable">
      <%= render partial: 'article', collection: @articles %>           
    </tbody>
  </table>

  <%= paginate @articles %> 
  <br>

  <div id = "new-article" >
    <%= link_to 'New Article', new_article_path, class: "btn btn-outline-primary", remote: true %>
  </div>
  